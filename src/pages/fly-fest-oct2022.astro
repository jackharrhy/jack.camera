<style is:global>
  main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
    padding: 0 1rem;
  }

  header img {
    max-width: 100%;
    max-height: 85%;
  }

  header p {
    padding: 0 1rem;
  }

  .notice {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgba(255, 0, 0, 0.2);
    padding: 1rem 3rem;
    width: 100%;
  }

  .notice > p {
    margin: 0;
    text-align: center;
    font-size: 1.5rem;
    font-style: italic;
    color: rgba(0, 0, 0, 0.5);
  }

  .p16-9 {
    aspect-ratio: 16 / 9;
  }

  .section {
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100vh;
  }

  .section img {
    max-height: 100%;
    max-width: 100%;
  }

  .section div {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    max-height: 100%;
    padding: 0 2rem;
  }

  .sparkles p {
    margin: 1rem 4rem;
    font-size: 5rem;
  }

  .insert {
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    max-height: 60vh;
  }

  .insert img {
    max-width: 100%;
    max-height: 60%;
  }

  .dino img {
    border: 4px solid #d27b4f;
  }

  .stickers img {
    border: 5px solid #dc9400;
  }

  .posters {
    background-color: #191c1d;
    padding: 4rem;
  }

  .posters img {
    aspect-ratio: 2.5/4;
  }

  .double img {
    margin: 0 1rem;
  }

  .planes-double-1 .raine {
    height: 70%;
  }

  .planes-double-2 .nick {
    height: 70%;
  }

  .trading img {
    transition: all ease-out 0.35s;
    height: 50%;
    transform: rotate(-2deg);
  }

  .trading img:hover {
    transform: scale(1.5) rotate(-1deg);
  }

  .chris-setup .small {
    height: 50%;
    margin-right: 1rem;
  }

  .knobs .small {
    height: 50%;
  }

  .double div {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    max-height: 100%;
    padding: 0 2rem;
    aspect-ratio: 2 / 1.6;
  }

  .knobs div {
    aspect-ratio: 5 / 3;
  }

  .planes-double-1 div,
  .planes-double-2 div {
    aspect-ratio: 5.1 / 3;
  }

  .headstone p {
    margin: 2rem 0;
    font-size: 6rem;
  }

  .zombie {
    background-color: black;
  }

  .wellness {
    flex-direction: column;
    margin-top: 15rem;
  }

  .wellness button {
    margin-top: 3rem;
    padding: 0.5rem 1rem;
    font-size: 1.25rem;
    font-family: monospace;
    background-color: white;
  }

  .wellness img {
    height: 50%;
  }

  .cd {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 60vh;
    margin: 5rem 0 1rem 0;
    padding: 4rem 1rem;
    font-size: 1.5rem;
  }

  .cd a {
    text-decoration: none;
  }

  .cd img {
    max-height: 50vh;
    max-width: 100%;
    animation: cd-spin 12s ease-in-out infinite;
  }

  @keyframes cd-spin {
    0% {
      transform: rotate(4deg);
    }
    50% {
      transform: rotate(-4deg);
    }
    100% {
      transform: rotate(4deg);
    }
  }

  @media (max-width: 1200px) {
    header {
      height: auto;
    }

    .section {
      height: auto;
    }

    .insert {
      height: auto;
    }

    .sparkles {
      flex-direction: column;
    }
    .sparkles img {
      max-height: 75%;
    }
    .double {
      flex-direction: column;
    }

    .posters img {
      margin: 1rem;
    }
  }
</style>
