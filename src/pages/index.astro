---
import Layout from "../layouts/Layout.astro";
---

<Layout title="home">
  <main>
    <h1>jack.camera</h1>
    <ul>
      <a href="./demo-night-2-nov2025">
        <li>Demo Night 2 - November 2025</li>
      </a>
      <a href="./fly-fest-oct2022">
        <li>Fly Festival - October 2022</li>
      </a>
    </ul>
  </main>
</Layout>

<style is:global>
  body {
    justify-content: center;
  }
  main {
    text-align: center;
  }

  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  h1 {
    font-size: 5rem;
  }

  li {
    font-size: 3rem;
  }

  @media (max-width: 800px) {
    h1 {
      font-size: 3rem;
    }

    li {
      font-size: 1.5rem;
    }

    ul {
      padding: 0;
      list-style: none;
    }
  }
</style>
