<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  :root {
    --background: oklch(96.47% 0.0401 157.79);
    --secondary-background: oklch(100% 0 0);
    --foreground: oklch(0% 0 0);
    --main-foreground: oklch(0% 0 0);
    --main: oklch(79.76% 0.2044 153.08);
    --border: oklch(0% 0 0);
    --ring: oklch(0% 0 0);
    --overlay: oklch(0% 0 0 / 0.8);
    --shadow: 2px 4px 0px 0px var(--border);
    --chart-1: #00d696;
    --chart-2: #ff7a05;
    --chart-3: #09f;
    --chart-4: #ffbf00;
    --chart-5: #7a83ff;
    --chart-active-dot: #000;
  }
  header {
    margin: 2rem 0;
    padding: 1rem 1.5rem;
    gap: 0.5rem;
    border-radius: 0.5rem;
    display: flex;
    flex-direction: column;
    box-shadow: 3px 3px 0px 0 rgba(0, 0, 0, 1);
    border-width: 2px;
    border-style: solid;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    border-color: var(--border,);
    background-color: var(--background,);
    color: var(--foreground, #111);
    width: 100%;
    max-width: 42rem;
  }
  header .definition {
    font-size: 0.8rem;
    font-style: italic;
    color: var(--foreground, #111);
  }

  .notice {
    max-width: 38rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .notice p:first-child {
    font-size: 1.2rem;
    font-weight: 600;
    text-align: center;
  }
  main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .section {
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100vh;
  }

  .section img {
    height: auto;
    width: auto;
    max-height: 100%;
    max-width: 100%;
  }

  @media (max-width: 1200px) {
    .section {
      height: auto;
    }
  }
</style>
